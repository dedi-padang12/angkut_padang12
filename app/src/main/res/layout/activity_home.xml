<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEDF4"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/txt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="BANG ANGKUT"
        android:textColor="#2E3691"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="6dp"
        android:text="22 Aug, 1996"
        android:textColor="#9A9A9A"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_id" />


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/menus"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
 android:id="@+id/banner_1"
                android:layout_width="350dp"
                android:layout_height="120dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">
            </ImageView>

            <ImageView
                android:id="@+id/banner_2"
                android:layout_width="350dp"
                android:layout_height="120dp"
                android:layout_marginRight="24dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">
            </ImageView>

            <ImageView
                android:id="@+id/banner_3"
                android:layout_width="350dp"
                android:layout_height="120dp"
                android:layout_marginRight="24dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">
            </ImageView>

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/titleLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="Layanan Kami.."
        android:textColor="#9A9A9A"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView2" />
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        app:layout_constraintTop_toBottomOf="@+id/titleLight"
        android:layout_height="wrap_content"
        app:layout_constraintCircleRadius="20dp"
        android:radius="12dp"
     >

    <LinearLayout
        android:id="@+id/menusa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleLight" >


    <LinearLayout
        android:id="@+id/btn_order_motor"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="18dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView2">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_marginLeft="9dp"

            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:src="@drawable/iklan" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:text="Bang Angkut Motor"
                android:textColor="#2E3691"
                android:textSize="22sp" />

            <TextView
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="4dp"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:text="Melayani angkutan sampah dengan motor"
                android:textColor="#9A9A9A"
                android:textSize="18sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_order_mobil"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_order_motor">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:src="@drawable/iklan" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:text="Bang Angkut Mobil"
                android:textColor="#2E3691"
                android:textSize="22sp" />

            <TextView

                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="4dp"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:text="Melayani angkutan sampah/barang dengan mobil"
                android:textColor="#9A9A9A"
                android:textSize="18sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_order_servis"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_order_mobil">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:src="@drawable/iklan" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/titleBookNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:text="Bang Service "
                android:textColor="#2E3691"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/titleBookDesc"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="4dp"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:text="Melayani service siap datang kerumah anda"
                android:textColor="#9A9A9A"
                android:textSize="18sp" />
        </LinearLayout>


    </LinearLayout>

    </LinearLayout>
</ScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideOverlay"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"

        >

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            app:menu="@menu/bottom_nav_menu" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>